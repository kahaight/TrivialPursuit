@model TrivialPursuit.Models.Game.AnswerSubmit

@{
    ViewBag.Title = "Game";
    ViewBag.Model = Model;
}

<h2>Game</h2>

@{
    Model.CurrentQuestion = Model.Game.GetRandomQuestion();
    Model.AnsweredQuestions.Add(Model.CurrentQuestion);
}
<p>@Model.CurrentQuestion.Text</p>

@using (Html.BeginForm("SubmitAnswer", "GameVersion", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AnswerSubmit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.HiddenFor(model => model.Game)       @*this line should be passing the value for Model.Game, not the PlayerId*@
            @Html.HiddenFor(model => model.AnsweredQuestions)
            @Html.HiddenFor(model => model.IsCorrect)
            @Html.HiddenFor(model => model.CurrentQuestion)
            @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quit", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
